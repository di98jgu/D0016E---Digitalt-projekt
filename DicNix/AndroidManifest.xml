<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.test.DicNicApplication"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="9" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/IceFullscreenTheme" >

        
        <activity android:name=".SplashScreenActivity" android:theme="@style/IceFullscreenTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity android:name="com.test.DicNicApplication.DashboardActivity" android:configChanges="orientation|keyboardHidden|screenSize" android:theme="@style/IceFullscreenTheme" android:label="@string/app_name" >
        </activity>
        
        <activity android:name="com.test.DicNicApplication.ListViewActivity" android:theme="@style/IceFullscreenTheme" android:label="@string/app_name" >
        </activity>
        
        <activity android:name="com.test.DicNicApplication.LocationDetailsActivity" android:theme="@style/IceFullscreenTheme" android:label="@string/app_name">
        </activity>
        
    </application>

</manifest>