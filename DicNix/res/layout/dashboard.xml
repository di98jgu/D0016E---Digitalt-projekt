    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
    	xmlns:tools="http://schemas.android.com/tools"
   		android:background="@drawable/dashboard"
    	tools:context=".FullscreenActivity" >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingLeft="65dp"
            android:paddingTop="65dp" >

            <ImageButton
                android:id="@+id/imageButton1"
                android:contentDescription="@drawable/list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="listMethod"
                android:src="@drawable/list" />

            <ImageButton
                android:id="@+id/imageButton2"
                android:contentDescription="@drawable/map"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/map" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingLeft="65dp" >

            <ImageButton
                android:id="@+id/imageButton3"
                android:contentDescription="@drawable/alarm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/alarm" />

            <ImageButton
                android:id="@+id/imageButton4"
                android:contentDescription="@drawable/sync"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/sync" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingLeft="65dp" >

            <ImageButton
                android:id="@+id/imageButton5"
                android:contentDescription="@drawable/edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/edit" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1" >
        </TableRow>
        
    </TableLayout>